{% macro navbarItem(id, title, active, ready) %}
<li class="Menu-item{% if id == active %} is-active{% endif %}">
  {% if ready %}
    <a href="/docs/{{id}}" class="Menu-link">{{title}}</a>
  {% else %}
    <a class="Menu-link is-disabled" disabled>{{title}}</a>
  {% endif %}
</li>
{% endmacro %}

{% from 'macros/toggle-button.njk' import ToggleButton %}

<nav class="o-Container o-Container--centered NavResponsive NavResponsiveMd">

  {{ ToggleButton("parent", "ToggleButton--hideText") }}

  <ul class="Menu Menu--vertical MenuMd">
    <li class="Menu-item Menu-item--left w-logo">
      <a href="/docs/">
        <img src="/images/jaywing-logo.png" width="65" height="65" alt="Jaywing">
      </a>
    </li>
    {% for section in docs_sections %}
      {{navbarItem(section.id, section.title, sectionid, section.ready)}}
    {% endfor %}
  </ul>

</nav>
