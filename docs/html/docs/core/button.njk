<h3>Content swap buttons</h3>

<div class="docs-example">

  <button class="Button Button--swap">
    <div class="Button-content">Hover on me</div>
    <div class="Button-content Button-content--hidden">More stuff</div>
  </button>

  <button class="Button Button--swap Button--ani">
    <div class="Button-content">Next</div>
    <div class="Button-content Button-content--hidden">{{ icon('arrow-right') }}</div>
  </button>

  <button class="Button Button--swap Button--vertical Button--ani">
    <div class="Button-content">Top</div>
    <div class="Button-content Button-content--hidden">{{ icon('arrow-up') }}</div>
  </button>

  <button class="Button Button--swap Button--aniFade">
    <div class="Button-content">Hover on me</div>
    <div class="Button-content Button-content--hidden">I fade in</div>
  </button>

</div>

