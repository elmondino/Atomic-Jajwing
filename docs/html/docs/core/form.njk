<h2>Usage</h2>

<h4>Form</h4>

<div class="docs-example">
  <form class="Form">
    <fieldset>
      <legend>Form</legend>
      <input type="text" placeholder="Text input" class="Form-input Form-input--inline">
      <input type="password" placeholder="Password input" class="Form-input Form-input--inline">
      <select class="Form-select Form-select--inline">
        <option>Option 01</option>
        <option>Option 02</option>
      </select>
      <button class="Button">Button</button>
      <label><input type="checkbox" class="Form-check Form-check--inline"> Checkbox</label>
      <label><input type="radio" class="Form-radio Form-radio--inline"> Radio</label>
      <textarea cols="30" rows="5" placeholder="Textarea" class="Form-text Form-text--inline"></textarea>
    </fieldset>
  </form>
</div>

